@model MoviesApp.ViewModels.ActorViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="FirstName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>

        <dt class="col-sm-2">
            <label asp-for="LastName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>

        <dt class="col-sm-2">
            <label asp-for="DateOfBirth"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfBirth.ToString("dd.MM.yyyy")
        </dd>
        <dt class="col-sm-2">
            <h5.5>Movies:</h5.5>
        </dt>
        @if (Model.ActorMovies.Count() != 0)
        {
            <div>
                <details>
                    <summary> show movies </summary>
                    <p>
                        @foreach (var item in Model.ActorMovies)
                        {
                            <dd class="col-sm-2">
                                @item.Title
                            </dd>
                        }
                    </p>
                </details>
            </div>
        }

        else
        {
            <p class="card-text">Films with the participation of @Model.FirstName @Model.LastName was not found.</p>
        }
    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>